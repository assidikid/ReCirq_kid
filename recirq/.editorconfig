# Configuration files (e.g., .env, .gitignore, etc.)
[{*.env,*.gitignore,*.gitattributes,*.dockerignore}]
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

# Markdown documentation and notebooks
[*.ipynb]
trim_trailing_whitespace = false
insert_final_newline = false

# Test files
[**/tests/**.py]
# Same as other Python files, but useful if you want to eventually override (e.g., shorter line length)
indent_size = 4
max_line_length = 88

# TOML files (common for pyproject.toml, etc.)
[*.toml]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Makefiles must use tabs
[Makefile]
indent_style = tab

# Ignore files in build or dist directories
[build/**]
insert_final_newline = false
trim_trailing_whitespace = false

[dist/**]
insert_final_newline = false
trim_trailing_whitespace = false
